{
  "name": "senor-mano-website",
  "version": "1.0.0",
  "description": "Website para acceder fácilmente a los cuadernillos de español",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "prebuild": "node generate-markdown-imports.js",
    "build": "remix vite:build",
    "dev": "concurrently \"npm run watch-markdown\" \"remix vite:dev\" --names \"watcher,dev\" --prefix-colors \"cyan,green\"",
    "dev:simple": "remix vite:dev",
    "watch-markdown": "node watch-markdown.js",
    "lint": "eslint --cache --cache-location ./node_modules/.cache/eslint .",
    "start": "remix-serve build/server/index.js",
    "typecheck": "tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@fontsource/delius": "^5.2.7",
    "@fontsource/lato": "^5.2.7",
    "@remix-run/node": "^2.17.1",
    "@remix-run/react": "^2.17.1",
    "@remix-run/serve": "^2.17.1",
    "isbot": "^5.1.31",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@remix-run/dev": "^2.17.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^3.2.4",
    "chokidar": "^4.0.3",
    "concurrently": "^9.2.1",
    "eslint": "^9.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "jsdom": "^27.0.1",
    "react-router-dom": "^7.9.4",
    "typescript": "^5.9.3",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "overrides": {
      "esbuild": "^0.25.0",
      "estree-util-value-to-estree": "^3.3.3"
    }
  },
  "engines": {
    "node": "22.x"
  },
  "packageManager": "pnpm@10.17.0"
}
